<%= link_to 'Back', posts_path, class: 'btn btn-secondary mb-3' %>

<div class="row">
  <div class="col-md-3">
    <div class="card">
     <h3 class="card-title text-center">
        Editing Post
      </h3>
      <div class="card-body">
      <%= render 'form', post: @post %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <%= form_with(model: [@post, @paragraph]) do |form| %>
      <%= form.submit %>
    <% end %>
  </div>
</div>

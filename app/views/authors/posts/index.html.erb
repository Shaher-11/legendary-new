<h2 class="d-flex justify-content-between mb-4">
  <span>Posts</span>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-info' %>
</h2>

<% @posts.each do |post| %>
  <%= link_to edit_post_path(post), class: 'text-decoration-none' do %>
    <div class="card mb-4 post-card">
      <div class="card-body">
      <div class="row">
      <div class="col-md-2">
      <h6 class="card-title mb-3 text-primary">Author: <%= post.author.username %> </h6>
      <% if post.header_image.present? %>
        <div class="header-img" style="background-image: url(<%= url_for(post.header_image) %>)";> </div>
      </div>
      <% end %>
      <div class="col-md-10">
      
      <h3 class="card-title mb-1 text-dark"> <%= post.title %> </h3>
      <p class="text-secondary mb-0"> <%= post.description %></p>
      </div>
      </div>
      </div>
    </div>
  <% end %>
<% end %>
